<Application
    x:Class="ZunePlayer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZunePlayer"
    RequestedTheme="Dark">

    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="Black" />
        <SolidColorBrush x:Key="AccentColor" Color="LightGray" />
        <LinearGradientBrush x:Key="linearGradientBrush">
            <LinearGradientBrush.Transform>
                <CompositeTransform TranslateY="5" />
            </LinearGradientBrush.Transform>
            <GradientStop Color="DeepPink" Offset="0.7"/>
            <GradientStop Color="Orange"/>
        </LinearGradientBrush>

        <x:String x:Key="AppName">ZunePlayer</x:String>
        
        <Style TargetType="TextBlock" x:Key="TextStyle">
            <Setter Property="Foreground" Value="{StaticResource AccentColor}" />
        </Style>
        
        <Style TargetType="Button" x:Key="ClickableTextStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="32" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        
    </Application.Resources>

</Application>
